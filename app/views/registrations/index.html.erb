<div style="float: right; color: #EEEEEE; margin-bottom: -1px; font-size: 18pt; font-weight: bold;">
    ANMÄLDA DELTAGARE
</div>
<table class="table table-striped">
    <thead class="head">
        <tr>
            <th>Förnamn</th>
            <th>Efternamn</th>
            <th>Årskurs</th>
            <th>Kommentar</th>
        </tr>
    </thead>
    <tbody class="registrations">

        <% @registrations.each do |registration| %>
        <tr class="<%= registration.hasPayedRegistration ? (registration.hasPayedTotal ? 'success' : 'info') : 'error'  %>" id="<%= registration.id %>">
            <td><%= registration.firstname %></td>
            <td><%= registration.surname %></td>
            <td><%= registration.grade %></td>
            <td><a href="#" rel="tooltip" data-placement: "right" title="<%= registration.comment %>"><%= truncate(registration.comment, :length => 19, :omission => '...', :style => 'a:link{color: #000') %></a></td>
        </tr>
        <% end %>

    </tbody>
</table>
<div class="pagebreak"><%= will_paginate @registrations %></div>


<script type="text/javascript">
    $("[rel=tooltip]").tooltip({placement: 'right'});

    $('tr').click(function () {
        window.location.href = '<%= project_registrations_path(@project) %>/' + $(this).attr('id')
    });   
</script>